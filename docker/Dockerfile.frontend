FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY frontend/ .

# Build the application
RUN npm run build

# Expose port
EXPOSE 3000

# Install serve for production
RUN npm install -g serve

# Start the application
CMD ["serve", "-s", "dist", "-l", "3000"]
